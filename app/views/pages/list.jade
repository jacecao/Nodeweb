extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影分类
						th 电影名字
						th 导演
						th 上映时间
						th 录入时间
						th 更新时间
						th 热度
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td #{item.category}
							td #{item.title}
							td #{item.doctor}
							td #{item.year}
							td #{moment(item.meta.createAt).format('MM/DD/YYYY HH:MM:SS')}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY HH:MM:SS')}
							td #{item.clicksRatio}
							td: a(target="_blank",href="/movie/#{item._id}") 查看
							td: a(target="_blank",href="/movie/update/#{item._id}") 修改
							td
								button.btn.btn-danger.btn-sm.del(type="button",data-id="#{item._id}") 删除
			a.btn.btn-primary(href="/movie/new") 添加电影数据					
	script(src="/js/remove.js")